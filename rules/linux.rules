groups:
- name: linux
  rules:
  - alert: "cpu_use"
    expr: 100 - (avg by (instance,server) (irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 85 
    for: 5m
    labels:
      severity: "警告"
    annotations:
      value: "{{ $value }}%"
      summary: "cpu高"
      description: "cpu利用率,5分钟平均值>85%"

  - alert: "cpu_iowait_use"
    expr: avg by (instance,server) (irate(node_cpu_seconds_total{mode="iowait"}[5m])) * 100 > 35 
    for: 5m
    labels:
      severity: "警告"
    annotations:
      value: "{{ $value }}%"
      summary: "cpu_iowait高"
      description: "cpu_iowait利用率,5分钟平均值>35%"

  - alert: "disk_use"
    expr: 100 - (node_filesystem_avail_bytes{fstype=~"ext4|xfs"} / node_filesystem_size_bytes{fstype=~"ext4|xfs"})*100 > 95 
    for: 5m
    labels:
      severity: "灾难"
    annotations:
      value: "{{ $value }}%"
      summary: "磁盘快满了"
      description: "{{ $labels.mountpoint }}磁盘利用率,5分钟持续>95%"

  - alert: "disk_inode_use"
    expr: 100 - (node_filesystem_files_free{fstype=~"ext4|xfs"} / node_filesystem_files{fstype=~"ext4|xfs"})*100 > 95 
    for: 5m
    labels:
      severity: "灾难"
    annotations:
      value: "{{ $value }}%"
      summary: "磁盘inode快满了"
      description: "{{ $labels.mountpoint }}磁盘inode利用率,5分钟持续>95%"
